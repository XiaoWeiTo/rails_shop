<h1 class="text-center">创建用户</h1>
<% unless @user.errors.empty? %>
    <div class="alert alert-danger" role="alert">
        <ul>
            <% @user.errors.messages.values.flatten.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @user do |form| %>
    <div class="mb-3">
        <%= form.label "邮箱",class:"form-label" %><br/>
        <%= form.email_field :email,class:"form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label "密码",class:"form-label"  %><br/>
        <%= form.password_field :password,class:"form-control" %>
    </div>

    <div class="mb-3">
        <%= form.label "确认密码",class:"form-label"  %><br/>
        <%= form.password_field :password_confirmation,class:"form-control" %>
    </div>

    <div class="mb-3 d-flex justify-content-center">
        <%= form.submit "创建",class:"btn btn-primary btn-lg" %>
    </div>
<% end %>